<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>TimeClock 1.0</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    </head>

    <body>
        <div class="container-fluid bg-info text-white py-2">
            <h1 style="display: inline;">Welcome <%=userName %>! </h1><a href="/"><button type="button" class="btn btn-light" style=" float: right;">Sign Out</button></a>
        </div>
            <div class="container p-3 mb-2 bg-light text-dark">
                <h2 style="display: inline;">Users</h2>
                
                    
                <div class="container">
                    <table class="table">
                        <tr><thead class="thead-dark"><th>Username</th><th>Password</th><th></th></thead></tr>
                        <% if(usersToShow) { %>
                            <% if (users.length > 0) { %>
                                <% users.forEach(user => { %>
                            <tr>
                        <td><h3 style="display: inline;"><%= user.userName %>: </h3></td><td><p style="display: inline;"><%= user.userPassword %></p></td><td><a href="/pwchange/<%= user.userID %>"><button type="button" class="btn btn-light" style=" float: right;">Change Password</button></a></td>
                        </tr>
                                <% }) %>
                            <% } %>
                        <% } %>
                </table>
            </div>
        
    </div>

    </body>
</html>